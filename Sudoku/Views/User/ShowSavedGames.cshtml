@model List<Sudoku.Models.ViewModels.ShowSavedGamesVM>
@{
    ViewBag.Title = "ShowSavedGames";
}

@if (Model.Count == 0)
{
    <h3>No saved games yet.</h3>
}
else
{
    <h3>You have @Model.Count saved games</h3>
}

<div id="games" class="clear-fix">
    @foreach (var game in Model)
    {
        <div class="game-wrapper">
            <div class="saved-at">Saved at: @game.SavedAt</div>
            <div class="game" data-saved-id='@game.Id' data-initial-id="@game.InitialBoardId">
                @Html.DisplayFor(m => game.Content, "_BoardPreview")
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/Scripts/Sudoku/loadGame.js"></script>
}
